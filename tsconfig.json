{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/components": [
        "./src/components"
      ],
      "@/components/ui/*": [
        "./src/components/ui/*"
      ],
      "@/components/ui": [
        "./src/components/ui"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/lib": [
        "./src/lib"
      ],
      "@/lib/translations/*": [
        "./src/lib/translations/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/hooks": [
        "./src/hooks"
      ],
      "@/context/*": [
        "./src/context/*"
      ],
      "@/context": [
        "./src/context"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/app": [
        "./src/app"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
